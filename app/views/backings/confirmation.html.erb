<div class="project">
  <div class="container">
    <div class="project-name">
      <h3><%= @project.name%></h3>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="project-detail">
          <h4><a href="#"><%= @project.user.full_name %></a> started the project.</h4>
          <p><%= @project.description %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="project-action">
        </div>
        <div class="project-status">
          <% if @project.backings.count > 0 %>
            <p><a href="#"><%= @project.backings.count %></a> people back this project</p>
          <% else %>
            <p>Be the first to back this project</p>
          <% end %>
          <p><%= @project.time_left %> left</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="backing">
  <div class="container">
    <h3>Confirm your backing</h3>
    <%= form_for [@project, @backing] do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="back-amount">
            <div class="input-group">
              <span class="input-group-addon">$</span>
                <%= f.text_field :amount, value: @backing.amount, readonly: true, class: "form-control", required: true %>
            </div>
          </div>
          <% case @backing.reward %>
            <% when "No Reward" %>
              <div class="reward-option">
                <div class="row">
                  <div class="col-md-4">
                      No Reward<br/>
                  </div>
                  <div class="col-md-8">
                    <div class="reward-option-description">
                      No Thanks. I just want to help the project.<br/>
                    </div>
                  </div>
                </div>
              </div>
            <% when "Standard" %>
              <div class="reward-option">
                <div class="row">
                  <div class="col-md-4">
                    <div class="reward-option-name">
                      Class Participation $12 +<br/>
                    </div>
                  </div>
                  <div class="col-md-8">
                    <div class="reward-option-description">
                      I love to help and want to join the classroom myself.<br/>
                    </div>
                  </div>
                </div>
              </div>
            <% when "Gift" %>
              <div class="reward-option">
                <div class="row">
                  <div class="col-md-4">
                    <div class="reward-option-name">
                      Class Invitation $15 +<br/>
                    </div>
                  </div>
                  <div class="col-md-8">
                    <div class="reward-option-description">
                      I know someone will absolutely love to join this class!<br/>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <div class="project-action">
              <%= content_tag :button, :type => :submit, :class => :'btn btn-default' do %>
                <span class="glyphicon glyphicon-plus"></span> Continue
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
