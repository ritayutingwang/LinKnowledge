<%= form_for(@curiosity) do |f| %>
  <% if @curiosity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@curiosity.errors.count, "error") %> prohibited this curiosity from being saved:</h2>

      <ul>
      <% @curiosity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="warning">
    <p id="validationMessege"></p>
  </div>
  <div class="new-curiosity">
    <div class="form-group">
      <%= f.text_field :title, required: true, class: "form-control", placeholder: "What do you want to learn?" %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, required: true, class: "form-control", rows:  "8", placeholder: "Why are you passionate about it?" %>
    </div>
    <div class="form-group">
      <input type="submit" onclick="return jssubmit();" class="button large" value="Submit" >
    </div>
  </div>
<% end %>

<script>
  function jssubmit() {

    if (document.getElementById("curiosity_title").value === "") {

      document.getElementById('validationMessege').innerHTML = 'Please enter title!';
      return false;
    }
    else if (document.getElementById('curiosity_description').value === "") {
      document.getElementById('validationMessege').innerHTML = 'Please enter description!';
      return false;
    }
    else {
      return true;
    }
  }
</script>
