<h1>Create a new project</h1>
<% if user_signed_in? %>
  <%= form_for @project do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
   
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% else %>
  <%= form_for @project, url: :new_project, html: { method: 'GET'} do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
   
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit('Sign in with Facebook and create project') %>
    </p>
  <% end %>
<% end %>
